<div class="row">
    <h1 class="text-center">Add new tattoo story for <%= @client.name %></h1>
</div>

<div class="row">
    
        <%= form_for @story, url: story_index_path, :html => { :multipart => true } do |s| %>
        <div class="form-group">
            <label>Title</label>
            <%= s.text_field :title, class: 'form-control' %>
        </div>

        <div class='form-group'>
            <label>Description</label>
            <%= s.text_area :description, class: 'form-control' %>
        </div>
        
        <div class="form-group">
        	<label>Tattoo Artist</label>
        	<select class="form-control">
        		<% @artists.each do |artist| %>
        			<option><%= artist.name %></option>
        		<% end %>
        	</select>
        </div>>
        	
        	
        <div class='form-group'>
            <label>Choose Image</label>
            <%= s.file_field :img %>
        </div>
        <div class="form-group uneditable">
        		<%= s.text_field :client_id , value: @client.id, class: 'hidden' %>
        </div>
        	
        <div class='form-group'>
            <%= s.submit %>
        </div>
        <% end %>
</div>