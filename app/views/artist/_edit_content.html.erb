<div class='row'>
    <h1 class="text-center">Edit Tattoo Artist</h1>
    <div class='col-md-6'>
        
        <%= form_for @artist, url: artist_path, :html => { :multipart => true }, method: :patch do |a| %>
        <div class="form-group">
            <label>Name</label>
            <%= a.text_field :name, class: 'form-control' %>
        </div>

        <div class='form-group'>
            <label>Bio</label>
            <%= a.text_area :bio, class: 'form-control' %>
        </div>
        
        <div class='form-group'>
            <label>Choose file to change profile picture</label>
            <%= a.file_field :avatar %>
        </div>
        <div class='form-group'>
            <%= a.submit %>
        </div>
        <% end %>
    </div>
    
    <div class='col-md-6'>
        <h3 class="text-center">Current Profile Picture</h3><br>
        <%= image_tag @artist.avatar.url(:medium) %>
    </div>
</div>

<div class='row'>
    <table>
        <% @images.each do |img| %>
            <td class='img-thumbnail'><%= link_to image_tag(img.img.url(:thumb)), img.img.url(:medium) %></td>
        <% end %>
    </table>
</div>

<div class='row'>
    Add new images
        <div class="form-group">

        <div id="dynamicInput" class='form-group'>
            <label>Add additional Images</label>
            <input id='artist_img' name='artist[img][]' type='file' />
        </div>
        
        <input type="button" value="Add More Images" onClick="addInput('dynamicInput');">
        </div>
</div>