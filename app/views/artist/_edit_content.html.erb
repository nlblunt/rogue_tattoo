        <%= form_for @artist, url: artist_path, :html => { :multipart => true }, method: :patch do |a| %>
<div class='row'>
    <h1 class="text-center">Edit Tattoo Artist</h1>
    <div class='col-md-6'>
        

        <div class="form-group">
            <label>Name</label>
            <%= a.text_field :name, class: 'form-control' %>
        </div>

        <div class='form-group'>
            <label>Bio</label>
            <%= a.text_area :bio, class: 'form-control' %>
        </div>
        
        <div class='form-group'>
            <label>Choose file to change profile picture</label>
            <%= a.file_field :avatar %>
        </div>


    </div>
    
    <div class='col-md-6'>
        <h3 class="text-center">Current Profile Picture</h3><br>
        <%= image_tag @artist.avatar.url(:medium) %>
    </div>
</div>

<div class='row'>
        <table class="text-center table-bordered">
        
        <%= a.fields_for :images do |i| %>
                <td class="text-center edit_images">
                    <%= link_to image_tag(i.object.img.url(:thumb)), i.object.img.url(:medium), :popup=>['original_image', 'height=300,width=300'], class: 'img-thumbnail' %><br>
                    <%= i.check_box :display %> Display<br>
                    <%= check_box_tag 'delete_id[]', i.object.id %> Delete
                </td>
        <% end %>       
        
        </table>
</div>

