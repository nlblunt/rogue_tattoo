<div class="row">
    <h1 class="text-center"><%= @client.firstname %> <%= @client.lastname %></h1>
    <hr>
</div>
<div class="row">
    <div class="col-md-6">
        <panel class="panel panel-default">
            <h3 class="text-center">Client Stories</h3>
            <table class="table table-striped table-border">
                <tr>
                    <th>Story Title</th>
                    <th>Story Description</th>
                    <th>Tattoo Artist</th>
                </tr>
                
                <% @stories.each do |story| %>
                <tr>
                    <td><%= link_to story.title, edit_story_path(story) %></td>
                    <td><%= story.description %></td>
                    <% @artist = Artist.find(story.artist_id)%>
                    <td><%= @artist.name %></td>
                </tr>
                <% end %>
            </table>

        </panel>
    </div>
    
    <div class="col-md-6">
        <panel class="panel panel-default">

        </panel>
    </div>
    

</div>