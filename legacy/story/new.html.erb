<div class="row">
    <h1 class="text-center">Add new tattoo story for <%= @client.firstname %> <%= @client.lastname %></h1>
</div>

<div class="row">
    
        <%= form_for @story, url: story_index_path, :html => { :multipart => true } do |s| %>
        <div class="form-group">
            <label>Title</label>
            <%= s.text_field :title, class: 'form-control' %>
        </div>

        <div class='form-group'>
            <label>Description</label>
            <%= s.text_area :description, class: 'form-control' %>
        </div>
        
        <div class="form-group">
        	<label>Tattoo Artist</label>
        	<%= collection_select(:story, :artist_id, Artist.all, :id, :name) %>
        	<% # s.select(:artist_id) %>
        	<% options_from_collection_for_select(Artist.all, :id, :name) %>   			
        </div>
        
        <div class="form-group uneditable">
        		<%= s.text_field :client_id , value: @client.id, class: 'hidden' %>
        </div>
        	

        <div id="dynamicInput" class='form-group'>
            <label>Choose Image</label>
            <input id='story_img' name='story[img][]' type='file' />
        </div>

        <div class="form-group">
            <input type="button" value="Add More Images" onClick="addInput('dynamicInput');">
        </div>
        
        <div class='form-group'>
            <%= s.submit %>
        </div>
        <% end %>
</div>